<h1>Welcome to <%= @restaurant.name %></h1>


<p>
  <% if policy(@restaurant).edit? %>
    <%= link_to "Edit Restaurant", edit_restaurant_path %>
  <% end %>
</p>


<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<% @restaurant.reviews.each do |review| %>
  <p>Rating: <%= "⭐️" * review.rating %></p>
  <p>Review: <%= review.content %>
<% end %>

<% if policy(@restaurant).destroy? %>
  <%= link_to "Delete Restaurant", restaurant_path(@restaurant),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
<% end %>

<p><%= link_to "Go back", restaurants_path %></p>
